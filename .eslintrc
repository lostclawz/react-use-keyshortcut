{
   "parser": "babel-eslint",
   "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "serviceworker": true,
      "es6": true
   },
   "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
         "jsx": true,
         "spread": true,
         "destructuring": true
      }
   },
   "settings": {
      "import/resolver": {
         "babel-module": {}
      }
   },
   "extends": [
      "prettier",
      "airbnb"
   ],
   "plugins": [
      "prettier",
      "react-hooks"
   ],
   "rules": {
      "brace-style": [0, "stroustrup"],
      "indent": ["error", 3],
      "react/jsx-indent": [1, 3],
      "react/jsx-indent-props": [1, 3],
      "no-console": 0,
      "no-plusplus": 0,
      "react/prop-types": 0,
      "react/require-default-props": 0,
      "react-hooks/rules-of-hooks": "error",
      "import/prefer-default-export": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "max-len": [
         2,
         80,
         4,
         {
            "ignoreStrings": true,
            "ignoreComments": true,
            "ignoreUrls": true,
            "ignoreTemplateLiterals": true,
            "ignorePattern": "[ ]*<p>.*</p>"
         }
      ]
   }
}
